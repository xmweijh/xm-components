{
  "name": "xm-components",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git:https://github.com/xmweijh/xm-components.git"
  },
  "workspaces": [
    "packages",
    "docs",
    "effect",
    "build"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "ct": "bash ./script/template.sh",
    "clean": "rimraf ./dist",
    "dev": "pnpm run -C effect dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "log": "conventional-changelog -p cmyr-config -i CHANGELOG.md -s -r 0",
    "type:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "type:effect": "vue-tsc -p tsconfig.effect.json --composite false --noEmit",
    "type:node": "tsc -p tsconfig.node.json --composite false --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs --port 9581",
    "build": "pnpm run -C build build",
    "build:vite": "node ./script/build.js",
    "lint:eslint": "eslint \"{packages,docs,build,effect}/**/*.{vue,ts,js}\" --fix",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,css,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:pretty": "pretty-quick --staged",
    "lint:staged": "lint-staged",
    "cz": "czg",
    "prepare": "husky install",
    "release": "bump package.json packages/package.json docs/package.json"
  },
  "devDependencies": {
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@jsxiaosi/commitlint-config": "^0.0.14",
    "@jsxiaosi/eslint-config-prettier": "^0.0.14",
    "@jsxiaosi/eslint-config-vue": "^0.0.14",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/node": "^18.11.17",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vue/test-utils": "^2.2.10",
    "consola": "^2.15.3",
    "conventional-changelog-cli": "^2.2.2",
    "czg": "^1.4.1",
    "eslint": "^8.30.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.2",
    "jsdom": "^21.1.0",
    "less": "^4.1.3",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.20",
    "postcss-html": "^1.5.0",
    "postcss-import": "^15.1.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "2.8.1",
    "pretty-quick": "^3.1.3",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.57.1",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.9.4",
    "unplugin-vue-macros": "^1.1.1",
    "vite-plugin-dts": "^3.5.3",
    "vite-plugin-optimizer": "^1.4.2",
    "vitest": "^0.28.5",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.16"
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@jsxiaosi/utils": "^0.0.17",
    "@types/webpack-env": "^1.18.1",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/shared": "^3.2.47",
    "@vueuse/core": "^9.9.0",
    "add": "^2.0.6",
    "async-validator": "^4.2.5",
    "axios": "^1.3.6",
    "loadsh": "^0.0.4",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "xm-components": "workspace:^0.0.1"
  },
  "peerDependencyRules": {
    "ignoreMissing": [
      "vite"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup",
        "source-map-*",
        "stable",
        "uuid",
        "vite*",
        "urix"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
